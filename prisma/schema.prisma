generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Player {
  id        String @id @default(uuid())
  name      String
  hp        Int @default(10)
  xp        Int @default(0)
  caps      Int @default(0)
  createdAt DateTime @default(now())
}